<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jpaSessionManager" class="io.codeforall.bootcamp.javabank.persistence.jpa.JpaSessionManager"/>

    <bean id="jpaTransactionManager" class="io.codeforall.bootcamp.javabank.persistence.jpa.JpaTransactionManager">
            <constructor-arg name="sm" ref="jpaSessionManager"/>
            </bean>

    <bean id="jpaAccountDao" class="io.codeforall.bootcamp.javabank.persistence.dao.jpa.JpaAccountDao">
        <constructor-arg name="sm" ref="jpaSessionManager"/>
    </bean>

    <bean id="jpaCustomerDao" class="io.codeforall.bootcamp.javabank.persistence.dao.jpa.JpaCustomerDao">
        <constructor-arg name="sm" ref="jpaSessionManager"/>
    </bean>

</beans>